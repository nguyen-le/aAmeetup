<form id="signin" action="<%= action_url %>" method="post">
  <%= render 'shared/auth_token' %>
  <% if patch  %>
    <%= render 'shared/patch' %>
  <% end %>
  <label for="user_name">Name: </label>

    <input 
      type="text" 
      name="user[name]" 
      id="user_name" 
      value="<%= @user.name %>" />
  
  <label for="user_password">Password: </label>
    <input 
      type="password" 
      name="user[password]" 
      id="user_password" 
       />

  <div id="submit_button">
    <button id="submit_login" type="submit"><%= submit_button %></button>
  </div>
</form>


